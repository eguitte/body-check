<div class="container">
  
  <div class="row mt-4">
    <div class="col-12">
      <div class=" signup-title text-center">
        <h1>ログイン</h1>
      </div>
    </div>
  </div>
  
  <div class="row text-center">
    <div class="col-md-6 offset-md-3">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
          <%= f.submit 'ログイン', class: 'btn btn-dark btn-block' %>
      <% end %>
      <p class="mt-2 entry">新規登録は <%= link_to 'こちら', signup_path %></p>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="test-user mt-4">
          <i class="fas fa-user"></i>
          <p>テストユーザーとしてログインできます</p>
          <%= f.hidden_field :email, value: 'test@example.com' %>
          <%= f.hidden_field :password, value: '123456' %>
          <%= f.submit 'ログインテスト', class: 'btn btn-outline-danger' %>
        </div>
      <% end %>
    </div>
  </div>

</div>
　

