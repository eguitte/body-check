<% if users.any? %>
  <ul class="list-unstyled　ml-4 mt-4">
    <% users.each do |user| %>
      <li class="media mt-2">
        <div class="icon">
        <% if user.image? %>
          <img class="mr-2 rounded" <%= image_tag user.image.url %>
        <% else %>
          <img class="mr-2 rounded" <%= image_tag("default.logo.png") %>
        <% end %>
        </div>
          
      <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="text-center">
    <%= paginate users %>
  </div>
    
<% end %>